@*@model Cucumber.Models.InputModel*@
@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <p class="lead">Number Converter</p>
        <div class="container">
            <div class="form-group-lg row">
                <div class="col-lg-2"></div>

                <div class="col-lg-8">
                    <form id="inputForm" class="border border-light p-5">
                        <fieldset>
                            <legend></legend>

                            @*@Html.TextBoxFor(x=>x.FirstName,new { id = "txtFirstName",@class="form-control mb-4", placeholder = "Enter First Name" })*@
                            <input type="text" id="txtFirstName" class="form-control mb-4" placeholder="Enter First Name" required>

                            <input type="text" id="txtLastName" class="form-control mb-4" placeholder="Enter Last Name">

                            <input type="number" id="txtCurrency" min="-100000000000" max="100000000000.00" step="0.01" class="form-control mb-4" placeholder="Enter Currency" required>

                            <div class="d-flex justify-content-between">

                            </div>

                            <button class="btn btn-info btn-lg btn-block my-4 m-4" type="submit">Submit</button>
                        </fieldset>
                    </form>
                </div>
                <div class="col-lg-2"></div>
            </div>
        </div>
</div>



@Html.Partial("Output")

@Html.Partial("Status")


